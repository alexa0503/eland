{% block javascripts %}
	{{ parent() }}
	<script>
$(document).ready(function(){
    $('.selBtn').click(function(){
        $('.selBtn').removeClass('selBtnSeled');
        $(this).addClass('selBtnSeled');
        });
    });
    
function goPage2(){
    var selSex=$('.selBtn').index($('.selBtnSeled'));//0男 1女
    if(selSex=='0'){
        window.location.href='{{ url("_pc_select",{gender:0,step:1}) }}';
        }
        else if(selSex=='1'){
        window.location.href='{{ url("_pc_select",{gender:1,step:1}) }}';
            }
            else{
                alert('请选择性别');
                }
    }
</script>
