{% extends 'AppBundle:default:pc/layout.html.twig' %}
{% block style %}
    body{ background:url({{ asset('bundles/app/default/pc/') }}images/page1Bg.jpg) center top no-repeat #000000;}
{% endblock %}
{% block content %}
    <a href="javascript:void(0);" class="abs selBtn selBtn1"><img src="{{ asset('bundles/app/default/pc/') }}images/p2SelA1.png" class="selOff"><img src="{{ asset('bundles/app/default/pc/') }}images/p2SelA2.png" class="selOn"></a>
        <a href="javascript:void(0);" class="abs selBtn selBtn2"><img src="{{ asset('bundles/app/default/pc/') }}images/p2SelB1.png" class="selOff"><img src="{{ asset('bundles/app/default/pc/') }}images/p2SelB2.png" class="selOn"></a>
        <a href="javascript:void(0);" class="abs btn05" onclick="goPage2();"><img src="{{ asset('bundles/app/default/pc/') }}images/btn05.png" /></a>
        

{% endblock %}
{% block javascripts %}
	{{ parent() }}
<script>
$(document).ready(function(){
    $('.selBtn').click(function(){
        $('.selBtn').removeClass('selBtnSeled');
        $(this).addClass('selBtnSeled');
        });
    });
    
function goPage2(){
    var selSex=$('.selBtn').index($('.selBtnSeled'));//0男 1女
    if(selSex=='0'){
        window.location.href='{{ url("_pc_select",{gender:0,step:1}) }}';
        }
        else if(selSex=='1'){
        window.location.href='{{ url("_pc_select",{gender:1,step:1}) }}';
            }
            else{
                alert('请选择性别');
                }
    }
</script>
{% endblock %}